{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": ["node", "jest", "react"],
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "dev/**/*", "test/**/*", "tests/**/*"]
}
